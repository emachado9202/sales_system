@{
    ViewBag.Title = "Transferencias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Transferencias</h2>

<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-business-tab" data-toggle="tab" href="#nav-business" role="tab" aria-controls="nav-business" aria-selected="true">Negocio</a>
        <a class="nav-item nav-link" id="nav-private-tab" data-toggle="tab" href="#nav-private" role="tab" aria-controls="nav-private" aria-selected="false">Personales</a>
    </div>
</nav>
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-business" role="tabpanel" aria-labelledby="nav-business-tab">
        <div class="pull-right btn-editions">
            @if (User.IsInRole(RoleConstants.Editor) || User.IsInRole(RoleConstants.Administrator))
            {
                <a class="btn btn-sm btn-success ml-1" href="@Url.Action("CreateBusiness")">Crear Transferencia</a>
            }
        </div>
        <table id="data-table-business" class="table table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th class="no-sort">
                    </th>
                    <th>
                        Hacia / Desde
                    </th>
                    <th>
                        Categoría
                    </th>
                    <th>
                        Producto
                    </th>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        Usuario
                    </th>
                    <th>
                        Fecha
                    </th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="tab-pane fade" id="nav-private" role="tabpanel" aria-labelledby="nav-profile-tab">
        <div class="pull-right btn-editions">
            @if (User.IsInRole(RoleConstants.Editor) || User.IsInRole(RoleConstants.Administrator))
            {
                <a class="btn btn-sm btn-success ml-1" href="@Url.Action("CreatePrivate")">Crear Transferencia</a>
            }
        </div>
        <table id="data-table-private" class="table table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th class="no-sort">
                    </th>
                    <th>
                        Hacia / Desde
                    </th>
                    <th>
                        Monto
                    </th>
                    <th>
                        Fecha
                    </th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

