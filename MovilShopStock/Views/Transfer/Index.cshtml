                if ('@(ViewBag.selectedTab)' != $(e.target).attr("id")) {
                    var newurl = window.location.protocol + "//" + window.location.host + window.location.pathname + '?selectedTab='+$(e.target).attr("id");
                    window.history.pushState({ path: newurl }, '', newurl);
                }
            });

