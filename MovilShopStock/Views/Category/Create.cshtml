@model MovilShopStock.Models.Catalog.Category

@{
    ViewBag.Title = "Crear Nueva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Nueva</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Categoria</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ShowDashboard, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ShowDashboard)
                    @Html.ValidationMessageFor(model => model.ShowDashboard, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ActionIn, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.DropDownList("ActionIn", new SelectList(ViewBag.ActionList, "Item1", "Item2"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ActionIn, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ActionOut, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.DropDownList("ActionOut", new SelectList(ViewBag.ActionList, "Item1", "Item2"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ActionOut, "", new { @class = "text-danger" })
                </div>
            </div>
        </div><div class="form-group">
            @Html.LabelFor(model => model.SystemAction, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.DropDownList("SystemAction", new SelectList(ViewBag.ActionList, "Item1", "Item2"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SystemAction, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}