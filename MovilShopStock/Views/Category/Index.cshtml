@model IEnumerable<MovilShopStock.Models.Catalog.Category>

@{
    ViewBag.Title = "Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categorias</h2>

<div class="pull-right">
    <a class="btn btn-success" href="@Url.Action("Create")">Crear Nueva</a>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowDashboard)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActionIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActionOut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SystemAction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdated)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.ShowDashboard)
                {
                    <span>Si</span>
                }
                else
                {
                    <span>No</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActionIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActionOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemAction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdated)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>