@{
    ViewBag.Title = "Salidas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Salidas</h2>
@if (ViewBag.Msg != null)
{
    <div class="row justify-content-center">
        <div class="alert alert-primary" role="alert">
            @ViewBag.Msg
        </div>
    </div>
}

<div class="pull-right btn-editions mt-2">
    @if (User.IsInRole(RoleConstants.Editor) || User.IsInRole(RoleConstants.Administrator))
    {
        <a class="btn btn-primary ml-1 btn-sm" href="@Url.Action("AllReceiver")">Recibir Ventas</a>
    }
    <a class="btn btn-success btn-sm ml-1" href="@Url.Action("Create")">Crear Salida</a>
</div>

<div class="pull-left btn-editions mt-2 mr-1">
    <select id="filter-datatable" class="custom-select custom-select-sm form-control form-control-sm">
        <option selected value="">Filtrar Todos</option>
        <option value="1">Recibidos</option>
        <option value="2">No Recibidos</option>
    </select>
</div>

<table id="data-table" class="table table-striped table-bordered" width="100%">
    <thead>
        <tr>
            <th>
                Categoría
            </th>
            <th>
                Producto
            </th>
            <th>
                Fecha
            </th>
            <th>
                Usuario
            </th>
            <th>
                Precio Venta
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Venta Total
            </th>
            <th>
                Ganancia
            </th>
            <th>
                Ganancia Total
            </th>
            <th>
                Recibido
            </th>
            <th class="no-sort">
            </th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section css{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.20/fh-3.1.6/r-2.2.3/sl-1.3.1/datatables.min.css" />

}

@section scripts{
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.20/fh-3.1.6/r-2.2.3/sl-1.3.1/datatables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#filter-datatable").change(function () {
                table.ajax.reload();
            });

            var table = $("#data-table").DataTable({
                dom: "lBfrtip",
                buttons: [],
                responsive: 0,
                select: !0,
                fixedHeader: !0,
                ajax: {
                    "url": "/StockOut/Search",
                    "type": "POST",
                    "data": function (d) {
                        d.type = $("#filter-datatable").val()
                    }
                },
                "processing": true,
                "serverSide": true,
                columns: [

                    { data: 'Category' },
                    { data: 'ProductName' },
                    { data: 'ProductName' },
                    { data: 'Date' },
                    { data: 'SalePrice' },
                    { data: 'Quantity' },
                    { data: 'TotalSale' },
                    { data: 'Gain' },
                    { data: 'TotalGain' },
                    { data: 'Receiver' },
                    {
                        "render": function (data, type, JsonResultRow, meta) {
                            var actions = "";
                            if (!JsonResultRow.Receivered) {
                                console.log('@(User.IsInRole(RoleConstants.Editor))');
                                if ('@(User.IsInRole(RoleConstants.Editor))'=='True' || '@(User.IsInRole(RoleConstants.Administrator))'=='True') {
                                    actions += '<a class=\'btn btn-primary btn-sm\' href=\'/StockOut/Receiver/'+JsonResultRow.DT_RowId+'\'>Recibir Venta</a><br /><br />';
                                }
                                actions+='<a class=\'btn btn-warning btn-sm\' href=\'/StockOut/Edit/'+JsonResultRow.DT_RowId+'\'>Editar</a><br />';
                            }
                            return actions;
                        }
                    }
                ],
                "rowCallback": function (row, data) {
                    /* mainView.contents.push(new dataModel(data));*/
                },
                "iDisplayLength": 25,
                "language": {
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "oAria": {
                        "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                    },
                    "select": {
                        "rows": "%d registros seleccionados"
                    }
                },
                "columnDefs": [{
                    "targets": 'no-sort',
                    "orderable": false
                }],
                "order": [[2, "desc"]]
            });

        });
    </script>
}